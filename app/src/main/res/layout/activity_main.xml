<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#F2F2F2"
    android:padding="20dp"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/h4pay_textlogo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <com.jtv7.rippleswitchlib.RippleSwitch
                        android:id="@+id/openStatus"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/openStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="OPEN"
                        android:textSize="18dp" />

                </LinearLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="12:40"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/tiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        android:padding="5dp">
                        <!-- Add contents here-->

                        <LinearLayout
                            android:id="@+id/exchangeButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_button"
                            android:orientation="horizontal"
                            android:textAlignment="center"
                            tools:ignore="RtlCompat">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:autoSizeMaxTextSize="35dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:text="교환권 사용"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </com.dshantanu.androidsquareslib.AndroidSquares>


                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="3dp"
                        android:layout_weight="1"

                        android:elevation="8dp"
                        android:padding="5dp">

                        <LinearLayout
                            android:id="@+id/calculation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_button"
                            android:orientation="horizontal"
                            android:textAlignment="center"
                            tools:ignore="RtlCompat">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:autoSizeMaxTextSize="35dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:text="정산"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.dshantanu.androidsquareslib.AndroidSquares>

                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="3dp"
                        android:layout_weight="1"

                        android:elevation="8dp"
                        android:padding="5dp">

                        <LinearLayout
                            android:id="@+id/stockManager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_button"
                            android:orientation="horizontal"
                            android:textAlignment="center"
                            tools:ignore="RtlCompat">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:autoSizeMaxTextSize="35dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:text="재고 관리"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.dshantanu.androidsquareslib.AndroidSquares>

                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="3dp"
                        android:layout_weight="1"

                        android:elevation="8dp"
                        android:padding="5dp">


                        <LinearLayout
                            android:id="@+id/orderListButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_button"
                            android:orientation="horizontal"
                            android:textAlignment="center"
                            tools:ignore="RtlCompat">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:autoSizeMaxTextSize="35dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:text="주문 내역"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.dshantanu.androidsquareslib.AndroidSquares>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"


                    android:orientation="horizontal">

                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="3dp"
                        android:layout_weight="1"

                        android:elevation="8dp"
                        android:padding="5dp">

                        <LinearLayout
                            android:id="@+id/makeNoticeButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_button"
                            android:orientation="horizontal"
                            android:textAlignment="center"
                            tools:ignore="RtlCompat">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:autoSizeMaxTextSize="35dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:text="공지 등록"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.dshantanu.androidsquareslib.AndroidSquares>

                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="3dp"
                        android:layout_weight="1"

                        android:elevation="8dp"
                        android:padding="5dp">

                        <LinearLayout
                            android:id="@+id/csButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_button"
                            android:orientation="horizontal"
                            android:textAlignment="center"
                            tools:ignore="RtlCompat">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:autoSizeMaxTextSize="35dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:text="문의 확인"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </com.dshantanu.androidsquareslib.AndroidSquares>

                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="3dp"
                        android:layout_weight="1"

                        android:elevation="8dp"
                        android:padding="5dp">

                        <LinearLayout
                            android:id="@+id/callDeveloperButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_button"
                            android:orientation="horizontal"
                            android:textAlignment="center"
                            tools:ignore="RtlCompat">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:autoSizeMaxTextSize="35dp"
                                android:autoSizeTextType="uniform"
                                android:gravity="center"
                                android:text="개발자 호출"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.dshantanu.androidsquareslib.AndroidSquares>

                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="3dp"
                        android:layout_weight="1"

                        android:elevation="8dp"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/empty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="60dp"
                            android:autoSizeTextType="uniform"
                            android:background="@drawable/rounded"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </com.dshantanu.androidsquareslib.AndroidSquares>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/openWarning"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:layout_weight="700"
                    android:text="사용하기 위해서 매점을 열어주세요.">

                </TextView>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

